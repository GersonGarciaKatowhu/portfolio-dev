---
import CSSIcon from './icons/CSS.astro'
import HTMLIcon from './icons/HTML.astro'
const TAGS = {
  CSS: {
    name: 'CSS',
    class: 'bg-black text-white',
    icon: CSSIcon
  },
  HTML: {
    name: 'HTML',
    class: 'bg-red text-red',
    icon: HTMLIcon
  }
}
const PROJECTS = [
  {
    title: 'Project 1',
    description: 'asi architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut lab',
    link: '#',
    github: '#',
    image: 'https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Image_created_with_a_mobile_phone.png/220px-Image_created_with_a_mobile_phone.png',
    tags: [TAGS.HTML, TAGS.CSS],
  }
]
---
{
  PROJECTS.map(({title, link, github, image, description, tags})=> (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {
          tags.map(tag=> (
            <li>
              <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                <tag.icon class='size-4'/>
                {tag.name}
              </span>
            </li>
          ))
          }
      </ul>
      <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${title}`}>
    </article>
  ))
}